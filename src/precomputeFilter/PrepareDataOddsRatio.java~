package precomputeFilter;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.LinkedList;
import java.util.Scanner;

import precomputeFilter.StatisticsOddsRatio;

public class PrepareDataOddsRatio {
	
	public static void CountFre(StatisticsOddsRatio sta, String[] content) {
		sta.totalNum = content.length-1;
		for(int i = 1; i< content.length; i++){
			if(Double.parseDouble(content[i]) > 0.0){
				sta.numOfPresent++;
			}
		}
	}
	
	public static class StatisticsData {
		public StatisticsOddsRatio[] data;
		public int numberOftuples;
	}
	
	public static StatisticsData readFile(String filename) {
		File file = new File(filename);
		Scanner scanner; 
		StatisticsData d = new StatisticsData(); 
		LinkedList<StatisticsOddsRatio> lsta = new LinkedList<StatisticsOddsRatio>();
		try {
			scanner = new Scanner(file);
			String line = scanner.nextLine();
			while(scanner.hasNextLine()) {
				StatisticsOddsRatio sta = new StatisticsOddsRatio();
				line = scanner.nextLine();
				String[] counts = line.split(" ");
				CountFre(sta, counts);
				lsta.add(sta);
			}
			scanner.close();			
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
		d.data = lsta.toArray(new StatisticsOddsRatio[0]);
		d.numberOftuples = d.data.length;
		return d;
	}
}
